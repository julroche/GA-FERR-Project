<!DOCTYPE html>
<html>
<head>
  <title>CalTest2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "event_calendar" %>
  <%= javascript_include_tag "event_calendar" %>
  <%= csrf_meta_tags %>
</head>

<body>


<!-- BEGIN #container -->
    <div id="container">
        
    		<!-- BEGIN #header -->
            <header>
                <div id="logo">

                </div>
                <h1>CougarCal.com</h1>

			</header>
    		<div class="clear"></div>


      <div id="user_nav">
        <% if current_user %>
          Logged in as <%= current_user.email %>.
          <%= link_to "Log out", log_out_path %>
        <% else %>
          <%= link_to "Sign up", sign_up_path %> or
          <%= link_to "log in", log_in_path %>
        <% end %>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

    			<%= yield %>

	</div><!-- END #container -->

     
    <!-- BEGIN #footer -->
    <footer> 
            <div class="clear"></div>
            
            <div id="copyright">
                 &copy; Copyright 2013 CougarCal.
            </div>
                            
            <div id="companybottom">
                Theme brought to you by <a href="#">SchoolCals!</a>
            </div>
               	
    </footer>

</body>
</html>
