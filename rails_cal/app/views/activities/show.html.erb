<p id="notice"><%= notice %></p>

<p>
  <b>Activity Name:</b>
  <%= @activity.activity_name %>
</p>

<p>
  <b>Calendar Owner:</b>
  <%= @activity.user.name %>
</p>


<table>
  <tr>
    <th>Event Name</th> 
    <th>Start at</th>
    <th>End at</th>
  </tr>

<% @activity.events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.start_at %></td>
   
    <td><%= display_event_end_time(event)%></td>
  </tr>
<% end %>
</table>

<%= link_to 'Add Events', new_event_path, class: "create-new" %>

<%= link_to 'Edit', edit_activity_path %> |
<%= link_to 'Back', activities_path %>
